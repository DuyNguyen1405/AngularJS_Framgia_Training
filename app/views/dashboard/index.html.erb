<div class="container">
  <div class="jumbotron">
    <h1>AngularJS</h1>
  </div>
  <div ng-controller="EventsCtrl">
    <div class="row">
      <div class="col-md-4">
        <input type="text" id="search" class="form-control" ng-model="search" placeholder="Type to search">
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Name</th>
              <th>Date</th>
              <th>Place</th>
              <th>Description</th>
            </tr>
          </thead>

          <tbody>
            <tr ng-repeat="event in events | filter : search">
              <td>{{event.name}}</td>
              <td>{{event.event_date}}</td>
              <td>{{event.place}}</td>
              <td>{{event.description}}</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
