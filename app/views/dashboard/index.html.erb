<div class="container">
  <div class="jumbotron">
    <h1>AngularJS</h1>
  </div>
  <div ng-controller="EventsCtrl">
    <div class="row">
      <div class="col-md-4">
        <input type="text" id="search" class="form-control" ng-model="search" placeholder="Type to search">
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <form class="form-inline" ng-submit="addEvent()">
          <div class="form-group">
            <input type="text" class="form-control" name="name" placeholder="Name" ng-model="event.name" />
          </div>
          <div class="form-group">
            <input type="text" class="form-control" name="event_date" placeholder="Date" ng-model="event.event_date">
          </div>
          <div class="form-group">
            <input type="text" class="form-control" name="place" placeholder="Place" ng-model="event.place" />
          </div>
          <div class="form-group">
            <input type="text" class="form-control" name="description" placeholder="Description" ng-model="event.description">
          </div>
          <button type="submit" class="btn btn-primary">Add</button>
        </form>
        <p ng-bind="error"></p>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Name</th>
              <th>Date</th>
              <th>Place</th>
              <th>Description</th>
            </tr>
          </thead>

          <tbody>
            <tr ng-repeat="event in events | filter : search">
              <td>{{event.name}}</td>
              <td>{{event.event_date}}</td>
              <td>{{event.place}}</td>
              <td>{{event.description}}</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
